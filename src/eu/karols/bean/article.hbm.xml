<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="eu.karols.bean.Article" table="article">
		<id column="id" name="id" type="java.lang.Integer" />
		<property column="creation_date" name="creationDate" type="java.lang.String" />
		<property column="creation_time" name="creationTime" type="java.lang.String" />
		<property column="title" name="articleTitle" type="java.lang.String" />
		<property column="text" name="articleText" type="java.lang.String" />
	</class>
</hibernate-mapping>
